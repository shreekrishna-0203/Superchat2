<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_320sdp"
    android:layout_height="@dimen/_60sdp"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout_menu"
    android:background="@drawable/gradient"
    android:orientation="horizontal"
    android:padding="@dimen/_10sdp"
    tools:context=".Activity.Home">

    <ImageView
        android:id="@+id/share_menu"
        android:layout_width="@dimen/_35sdp"
        android:layout_height="@dimen/_35sdp"
        android:padding="@dimen/_4sdp"
        android:layout_gravity="center"
        android:layout_margin="@dimen/_3sdp"
        android:src="@drawable/share" />
    <ImageView
        android:id="@+id/star_menu"
        android:layout_width="@dimen/_35sdp"
        android:layout_height="@dimen/_35sdp"
        android:padding="@dimen/_4sdp"
        android:layout_gravity="center"
        android:layout_margin="@dimen/_3sdp"
        android:src="@drawable/star" />
    <ImageView
        android:id="@+id/tickmark_menu"
        android:layout_width="@dimen/_35sdp"
        android:layout_height="@dimen/_35sdp"
        android:padding="@dimen/_4sdp"
        android:layout_gravity="center"
        android:layout_margin="@dimen/_3sdp"
        android:src="@drawable/tick" />



    <ImageView
        android:id="@+id/group_menu"
        android:layout_width="@dimen/_35sdp"
        android:layout_height="@dimen/_35sdp"
        android:padding="@dimen/_4sdp"
        android:layout_gravity="center"
        android:layout_margin="@dimen/_3sdp"
        android:src="@drawable/group_icon" />


    <ImageView
        android:id="@+id/settings_menu"
        android:layout_width="@dimen/_35sdp"
        android:layout_height="@dimen/_35sdp"
        android:padding="@dimen/_4sdp"
        android:layout_gravity="center"
        android:layout_margin="@dimen/_3sdp"
        android:src="@drawable/settings_icon" />

    <ImageView
        android:id="@+id/refresh_menu"
        android:layout_width="@dimen/_35sdp"
        android:layout_height="@dimen/_35sdp"
        android:padding="@dimen/_4sdp"
        android:layout_gravity="center"
        android:layout_margin="@dimen/_3sdp"
        android:src="@drawable/refresh" />

    <ImageView
        android:id="@+id/exit_menu"
        android:layout_width="@dimen/_35sdp"
        android:layout_height="@dimen/_35sdp"
        android:padding="@dimen/_5sdp"
        android:layout_gravity="center"
        android:layout_margin="@dimen/_3sdp"
        android:src="@drawable/exit" />


</LinearLayout>
